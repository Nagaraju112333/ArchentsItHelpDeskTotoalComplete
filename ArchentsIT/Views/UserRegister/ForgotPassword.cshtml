@model  ArchentsIT.Models.ForgotPassword
@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/ArchentsIT.cshtml";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ForgotPassword</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <style>
        .main1 {
            margin-left: 300px;
            margin-top: 150px;
        }

        p {
            font-size: 3vw;
        }

        #btn1 {
            border-radius: 20px;
            color: white;
            background-color: black;
        }
        #emailormobilenumber{
            font-weight:300;
        }
    </style>
</head>
<body>
    <div class="container">
        <p style="margin-left:350px;">Forgot Password</p>
        <div class="main1">


            <div class="forgotpassword">
                @using (Html.BeginForm("ForgotPassword", "UserRegister",FormMethod.Post))
                {
                    <div class="form-horizontal">

                        <div class="text-success">
                            @ViewBag.Message
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2" id="emailormobilenumber">Email/Phone Number</label>
                            @Html.TextBoxFor(model=>model.MobileNumberAndEmail,"",new {@class= "form-control w-50" })
                          @*  @Html.TextBox("EmailID", "", new { @class = "form-control w-50" })*@
                        </div>
                        <div class="form-group" style="margin-top:20px;">
                            <div class="form-group">
                                <input type="submit" value="Submit" class=" form-control  w-50" id="btn1" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>

