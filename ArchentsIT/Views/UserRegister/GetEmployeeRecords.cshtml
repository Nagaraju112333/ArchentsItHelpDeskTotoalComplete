   <div>
       <table class="table table-striped  dt-responsive " id="tableid">
           <thead>
               <tr>
                   <th>
                       Sno
                   </th>
                   <th>TicketNo</th>
                   <th>Date</th>
                   <th>Status</th>
                   <th>Assigned_Person</th>
                   <th>Query</th>
               </tr>
           </thead>
           <tbody>
               @if (ViewBag.name != null)
               {
                 <tr>
                     <td>
                         <p id="viewbag">@ViewBag.name</p>
                     </td>
                 </tr>  
               }
               else
               {
                   foreach (var c in Model)
                   {
                       <tr>
                           <td>@Html.DisplayFor(model=>c.Sno)</td>
                           <td>@Html.DisplayFor(model=>c.TicketNo)</td>
                           <td>@Html.DisplayFor(model=>c.Date)</td>
                           <td>@Html.DisplayFor(model=>c.Status)</td>
                           <td>@Html.DisplayFor(model=>c.Assigned_Person)</td>
                           <td>@Html.DisplayFor(model=>c.Query)</td>
                       </tr>
                   }

               }

           </tbody>
       </table>
   </div>
