@model  ArchentsIT.Models.CreatePassword
@{
    ViewBag.Title = "CretePassword";
    Layout = "~/Views/Shared/ArchentsIT.cshtml";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ForgotPassword</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <style>
        .main1 {
            margin-left: 300px;
            margin-top: 150px;
        }

        p {
            font-size: 3vw;
        }
        #btn1 {
            border-radius: 20px;
            color: white;
            background-color: black;
        }
        #NewPassword{
            border-color:black;
        }
        #ConfirmPassword {
            border-color: black;
        }
    </style>
</head>
<body>
    <div class="container">
        <p style="margin-left:350px;">Create Password</p>
        <div class="main1">
           
            <div class="forgotpassword">
                <div>
                   @* @if (TempData["Status"] != null && Convert.ToBoolean(ViewBag.Status))
                    {*@
                        @if (TempData["message"] != null)
                        {
                            <div class="alert alert-success">
                                <strong>Success!</strong>@TempData["message"];
                            </div>
                        }
                    @*}*@
                </div>
                @using (Html.BeginForm("CretePassword", "UserRegister", FormMethod.Post))
                {

                    <div class="form-horizontal">


                        <div class="text-success">
                            @ViewBag.Message
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Password</label>
                            @* @Html.TextBox("EmailID", "", new { @class = "form-control w-50" })*@
                            @*@Html.TextBoxFor(model => model.NewPassword, "", new { @class = "form-control w-50" })*@
                            @Html.Password("NewPassword", "", new { @class = "form-control w-50" })
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Confirm Password</label>
                            @*  @Html.TextBox("EmailID", "", new { @class = "form-control w-50" })*@
                            @Html.Password("ConfirmPassword", "", new { @class = "form-control w-50" })
                            @*  @Html.TextBoxFor(model => model.ConfirmPassword, "", new { @class = "form-control w-50" })*@
                        </div>
                        <div class="form-group" style="margin-top:20px;">
                            <div class="form-group">
                                <input type="submit" value="Create" class=" form-control  w-50" id="btn1" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>

